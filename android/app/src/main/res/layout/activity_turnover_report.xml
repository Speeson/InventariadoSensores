<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_back_shadow"
                    android:contentDescription="@null"
                    android:src="@drawable/back"
                    android:padding="6dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageButton
                        android:id="@+id/btnAlertsQuick"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Alertas"
                        android:scaleType="centerInside"
                        android:padding="0dp"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:id="@+id/tvAlertsBadge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_badge_red"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="0" />
                </FrameLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A000000"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btnRefreshTurnover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Recargar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingVertical="12dp" /><LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tvTurnPageInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrando 0/0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:includeFontPadding="false" />

                    <Button
                        android:id="@+id/btnPrevTurnPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anterior"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />

                    <Button
                        android:id="@+id/btnNextTurnPage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />
                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTurnover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

