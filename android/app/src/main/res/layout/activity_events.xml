<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Eventos"
        app:titleTextColor="@android:color/white"
        app:navigationIconTint="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear evento"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo (SENSOR_IN / SENSOR_OUT)"
                android:text="SENSOR_IN"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etProductId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product ID"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDelta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delta ( > 0 )"
                android:inputType="number"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etSource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Source"
                android:text="sensor_simulado"
                android:layout_marginBottom="10dp" />

            <Button
                android:id="@+id/btnCreateEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear evento" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listado"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recargar eventos" />

            <ListView
                android:id="@+id/lvEvents"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
