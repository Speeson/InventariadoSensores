<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <LinearLayout
        android:id="@+id/scrollEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_back_shadow"
                    android:contentDescription="@null"
                    android:src="@drawable/back"
                    android:padding="6dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageButton
                        android:id="@+id/btnAlertsQuick"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Alertas"
                        android:scaleType="centerInside"
                        android:padding="0dp"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:id="@+id/tvAlertsBadge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_badge_red"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="0" />
                </FrameLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A000000"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/layoutCreateEventHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="6dp">

                        <TextView
                            android:id="@+id/tvCreateEventTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Crear evento"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/ivCreateEventChevron"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|center_vertical"
                            android:contentDescription="@null"
                            android:src="@drawable/add" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/layoutCreateEventContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEventType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tipo (SENSOR_IN / SENSOR_OUT)"
                            android:text="SENSOR_IN"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProductId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product ID"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDelta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Delta ( > 0 )"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Location"
                            android:minHeight="56dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Source"
                            android:text="sensor_simulado"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btnCreateEvent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_button_gradient"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:text="Crear evento"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingVertical="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:strokeWidth="1dp"
                app:strokeColor="#1A000000"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btnRefresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_gradient"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Recargar eventos"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvEvents"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
