<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <LinearLayout
        android:id="@+id/scrollEvents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:paddingEnd="16dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_liquid_button_pressable"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tvEventsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Eventos"
                android:textColor="@color/liquid_popup_title"
                android:textSize="22sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <ImageButton
                    android:id="@+id/btnAlertsQuick"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Alertas"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/tvAlertsBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_badge_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventActionsLegacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_liquid_popup_card"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <FrameLayout
                        android:id="@+id/layoutCreateEventHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/ivCreateEventAdd"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/glass_add" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF" />

                    <FrameLayout
                        android:id="@+id/layoutSearchEventHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <ImageView
                            android:id="@+id/ivCreateEventSearch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/glass_search" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCreateEventContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etEventType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Tipo"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etProductId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_input"
                            android:hint="ID de producto"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDelta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_input"
                            android:hint="Cantidad (> 0)"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Ubicacion"
                            android:minHeight="56dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Fuente"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnCreateEvent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_button_pressable"
                        android:backgroundTint="@null"
                        android:paddingVertical="12dp"
                        android:text="Crear evento"
                        android:textAllCaps="false"
                        android:textColor="@color/liquid_popup_button_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSearchEventContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSearchType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etSearchType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Tipo"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="none">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearchProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_input"
                            android:hint="Producto (ID o nombre)"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSearchSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etSearchSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:hint="Fuente"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSearchEvents"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:paddingVertical="10dp"
                            android:text="Buscar"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/btnClearSearch"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:paddingVertical="10dp"
                            android:text="Limpiar"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/liquid_popup_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_liquid_popup_card"
                android:orientation="vertical"
                android:padding="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEventsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_events_list_header"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvEventsPageNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:includeFontPadding="false"
                                android:text="Pagina 0"
                                android:textColor="@color/liquid_popup_text"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvEventsPageInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="Mostrando 0/0"
                                android:textColor="@color/liquid_popup_text"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnPrevPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="3dp"
                                android:text="Anterior"
                                android:textAllCaps="false"
                                android:textSize="12sp" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnRefresh"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/bg_liquid_button_pressable"
                                android:backgroundTint="@null"
                                android:contentDescription="Recargar eventos"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/glass_refresh"
                                app:backgroundTint="@null" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/btnNextPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="3dp"
                                android:text="Siguiente"
                                android:textAllCaps="false"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEvents"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
