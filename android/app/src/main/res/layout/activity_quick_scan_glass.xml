<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#660C1F3B"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_liquid_popup_card"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Escaneo rapido"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnQuickScanClose"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_liquid_button_danger"
                android:text="X"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_liquid_input">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewQuickScan"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/scanGuide"
                android:layout_width="260dp"
                android:layout_height="110dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:layout_width="34dp"
                    android:layout_height="3dp"
                    android:layout_gravity="top|start"
                    android:background="#E8FFFFFF" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="34dp"
                    android:layout_gravity="top|start"
                    android:background="#E8FFFFFF" />

                <View
                    android:layout_width="34dp"
                    android:layout_height="3dp"
                    android:layout_gravity="top|end"
                    android:background="#E8FFFFFF" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="34dp"
                    android:layout_gravity="top|end"
                    android:background="#E8FFFFFF" />

                <View
                    android:layout_width="34dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|start"
                    android:background="#E8FFFFFF" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom|start"
                    android:background="#E8FFFFFF" />

                <View
                    android:layout_width="34dp"
                    android:layout_height="3dp"
                    android:layout_gravity="bottom|end"
                    android:background="#E8FFFFFF" />
                <View
                    android:layout_width="3dp"
                    android:layout_height="34dp"
                    android:layout_gravity="bottom|end"
                    android:background="#E8FFFFFF" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvQuickScanStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Apunta al codigo dentro del recuadro"
            android:textColor="#E6F0FF"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>
