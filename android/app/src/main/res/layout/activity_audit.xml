<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <LinearLayout
        android:id="@+id/scrollAudit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/back"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tvAuditTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Auditoria"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface" />

            <View
                android:layout_width="36dp"
                android:layout_height="36dp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <FrameLayout
                        android:id="@+id/layoutSearchAuditHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivSearchAudit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/search" />
                    </FrameLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <FrameLayout
                        android:id="@+id/layoutExportAuditHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivExportAudit"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/export" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSearchAuditContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEntity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etEntity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Entidad"
                            android:minHeight="56dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilAction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etAction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Accion"
                            android:minHeight="56dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUserId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="User ID"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha desde (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDateTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha hasta (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnApplyFilters"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_soft_purple"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:text="Buscar"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingVertical="10dp" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/btnClearFilters"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_soft_purple"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:text="Limpiar"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingVertical="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutExportAuditContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btnExportAuditJson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Exportar a JSON"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="10dp" />

                    <Button
                        android:id="@+id/btnExportAuditCsv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Exportar a CSV"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="10dp" />

                    <Button
                        android:id="@+id/btnExportAuditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Exportar a Texto"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="10dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnRefreshAudit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_soft_purple"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:text="Recargar auditoria"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tvAuditCounter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrando 0/0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:includeFontPadding="false" />

                    <Button
                        android:id="@+id/btnPrevAudit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anterior"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />

                    <Button
                        android:id="@+id/btnNextAudit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAudit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:id="@+id/tvAuditEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sin registros de auditoria"
                    android:textColor="?attr/colorOnSurface"
                    android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
