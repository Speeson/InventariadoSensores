<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="18dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_liquid_popup_card"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieBluetoothScan"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/bluetooth" />

                <TextView
                    android:id="@+id/tvBluetoothTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Buscando impresoras Niimbot"
                    android:textColor="@color/liquid_popup_title"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvBluetoothHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Selecciona tu B1 para conectar e imprimir."
                android:textColor="@color/liquid_popup_text"
                android:textSize="13sp" />

            <ListView
                android:id="@+id/lvBluetoothDevices"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_liquid_input"
                android:divider="@color/liquid_popup_divider"
                android:dividerHeight="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBluetoothRescan"
                    android:layout_width="132dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_liquid_button_pressable"
                    android:backgroundTint="@null"
                    android:text="Reescanear"
                    android:textAllCaps="false"
                    android:textColor="@color/liquid_popup_button_text" />

                <Button
                    android:id="@+id/btnBluetoothCancel"
                    android:layout_width="132dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_liquid_button_pressable"
                    android:backgroundTint="@null"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:textColor="@color/liquid_popup_button_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
