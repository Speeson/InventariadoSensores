<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_back_shadow"
                android:contentDescription="@null"
                android:src="@drawable/back"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Etiqueta"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvMeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SKU - Codigo de barras"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginBottom="8dp" />

                <WebView
                    android:id="@+id/webLabel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDownloadSvg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Descargar SVG"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="10dp" />

                    <Button
                        android:id="@+id/btnDownloadPdf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Descargar PDF"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:paddingVertical="10dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnRegenerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_button_soft_purple"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:text="Regenerar etiqueta"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingVertical="10dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnPrint"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button_soft_purple"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/print"
                        android:padding="10dp" />

                    <ImageButton
                        android:id="@+id/btnSaveNiimbot"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_button_soft_purple"
                        android:contentDescription="@null"
                        android:scaleType="centerInside"
                        android:src="@drawable/niimbot"
                        android:padding="10dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</FrameLayout>
