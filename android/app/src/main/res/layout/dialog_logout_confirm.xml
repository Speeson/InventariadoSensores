<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#F7F2FA"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="#E1D5F0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="340dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="16dp"
        android:paddingBottom="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieLogout"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginEnd="10dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/logout" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLogoutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="210dp"
                    android:text="Cerrar sesión"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLogoutMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:maxWidth="210dp"
                    android:text="¿Seguro que quieres cerrar sesión?"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogoutCancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:minWidth="132dp"
                android:minHeight="0dp"
                android:background="@drawable/bg_button_soft_purple"
                android:backgroundTint="@null"
                android:elevation="0dp"
                android:paddingStart="22dp"
                android:paddingTop="0dp"
                android:paddingEnd="22dp"
                android:paddingBottom="0dp"
                android:stateListAnimator="@null"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogoutConfirm"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:minWidth="132dp"
                android:minHeight="0dp"
                android:background="@drawable/bg_button_soft_purple"
                android:backgroundTint="@null"
                android:elevation="0dp"
                android:paddingStart="22dp"
                android:paddingTop="0dp"
                android:paddingEnd="22dp"
                android:paddingBottom="0dp"
                android:stateListAnimator="@null"
                android:text="Cerrar"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
