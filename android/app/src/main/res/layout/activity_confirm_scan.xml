<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_liquid_button_pressable"
                    android:contentDescription="@null"
                    android:padding="6dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tvConfirmTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Confirmar escaneo"
                    android:textColor="@color/liquid_popup_title"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageButton
                        android:id="@+id/btnAlertsQuick"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Alertas"
                        android:padding="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:id="@+id/tvAlertsBadge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:layout_marginEnd="6dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bg_badge_red"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="26dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_liquid_popup_card"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Producto"
                        android:textColor="@color/liquid_popup_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBarcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Codigo de barras:" 
                        android:textColor="@color/liquid_popup_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:text="Tipo de movimiento"
                        android:textColor="@color/liquid_popup_text"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnTypeIn"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:text="IN"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnTypeOut"
                            android:layout_width="0dp"
                            android:layout_height="44dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:text="OUT"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_input"
                            android:hint="Cantidad (obligatorio)"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_input"
                            android:hint="Ubicacion (opcional)"
                            android:minHeight="56dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnConfirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_button_pressable"
                        android:backgroundTint="@null"
                        android:paddingVertical="12dp"
                        android:text="Confirmar"
                        android:textAllCaps="false"
                        android:textColor="@color/liquid_popup_button_text"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:backgroundTint="@null" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
