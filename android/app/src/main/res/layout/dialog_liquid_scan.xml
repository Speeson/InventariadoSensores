<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Escaneo rapido"
        android:textColor="@color/liquid_popup_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Abrir camara para escanear un codigo ahora."
        android:textColor="@color/liquid_popup_body"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnScanPopupCancel"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnScanPopupOpen"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Abrir"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>

