<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Ubicacion activa"
            android:textColor="@color/liquid_popup_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnLocationClose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_red"
            android:tint="@null"
            app:backgroundTint="@null" />
    </FrameLayout>

    <ListView
        android:id="@+id/lvLocations"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_liquid_input"
        android:choiceMode="singleChoice"
        android:divider="@color/liquid_popup_divider"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLocationClear"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Limpiar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnLocationApply"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Aplicar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>
