<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_liquid_popup_card"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieListLoading"
                android:layout_width="120dp"
                android:layout_height="50dp"
                app:lottie_rawRes="@raw/loading_list"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/tvListLoadingLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Cargando eventos"
                android:textColor="@color/liquid_popup_title"
                android:textSize="16sp"
                android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
