<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/liquidBottomNavRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingBottom="12dp">

    <LinearLayout
        android:id="@+id/centerExpandPanel"
        android:layout_width="214dp"
        android:layout_height="62dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="72dp"
        android:alpha="0"
        android:background="@drawable/bg_liquid_menu_panel"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scaleX="0.8"
        android:translationY="16dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnCenterManualAction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_liquid_menu_button"
            android:contentDescription="Codigo manual"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/glass_scanmanual" />

        <ImageButton
            android:id="@+id/btnCenterClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_liquid_menu_button"
            android:contentDescription="Cerrar opciones"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/glass_x" />

        <ImageButton
            android:id="@+id/btnCenterScanAction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/bg_liquid_menu_button"
            android:contentDescription="Escaner rapido"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/glass_scanner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liquidBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_liquid_menu_panel"
        android:elevation="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center">

            <ImageButton
                android:id="@+id/btnLiquidHome"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/glass_home" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center">

                <ImageButton
                    android:id="@+id/btnLiquidTheme"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:contentDescription="Busqueda rapida"
                    android:padding="7dp"
                    android:scaleType="centerInside"
                    android:translationX="-3dp"
                    android:src="@drawable/glass_search" />
            </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center">

            <ImageButton
                android:id="@+id/btnLiquidScan"
                android:layout_width="@dimen/top_center_button_size"
                android:layout_height="@dimen/top_center_button_size"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="Escanear"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/glass_add" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center">

            <ImageButton
                android:id="@+id/btnLiquidSearch"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="Asistente IA"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:translationX="3dp"
                android:src="@drawable/glass_cloud" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foregroundGravity="center">

            <ImageButton
                android:id="@+id/btnLiquidProfile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:contentDescription="Auditoria"
                android:padding="7dp"
                android:scaleType="centerInside"
                android:src="@drawable/glass_audit" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>
