<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <LinearLayout
        android:id="@+id/scrollThresholds"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:padding="6dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tvThresholdsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thresholds"
                android:textColor="@color/liquid_popup_title"
                android:textSize="22sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <ImageButton
                    android:id="@+id/btnAlertsQuick"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Alertas"
                    android:padding="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/tvAlertsBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_badge_red"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewThresholdsTopSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThresholdsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/liquid_popup_divider"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_liquid_popup_card"
                android:orientation="vertical"
                android:padding="6dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_events_list_header"
                        android:orientation="vertical"
                        android:paddingStart="10dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvThresholdPageNumber"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:includeFontPadding="false"
                                android:text="Pagina 0/0"
                                android:textColor="@color/liquid_popup_text"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvThresholdPageInfo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="Mostrando 0/0"
                                android:textColor="@color/liquid_popup_text"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btnPrevThresholdPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="3dp"
                                android:text="Anterior"
                                android:textAllCaps="false"
                                android:textSize="12sp" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <ImageButton
                                android:id="@+id/btnRefreshThresholds"
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                android:background="@drawable/bg_liquid_button_pressable"
                                android:backgroundTint="@null"
                                android:contentDescription="Recargar thresholds"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/glass_refresh"
                                app:backgroundTint="@null" />

                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/btnNextThresholdPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minHeight="0dp"
                                android:minWidth="0dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="3dp"
                                android:text="Siguiente"
                                android:textAllCaps="false"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvThresholds"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/viewThresholdsBottomSpacer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0" />

    </LinearLayout>

</FrameLayout>
