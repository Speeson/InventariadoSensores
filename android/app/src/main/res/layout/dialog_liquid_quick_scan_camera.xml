<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Escaneo rapido"
            android:textColor="@color/liquid_popup_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnQuickScanClose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_red"
            android:tint="@null" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_liquid_input"
        android:clipToPadding="true"
        android:clipChildren="true">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewQuickScan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:implementationMode="compatible"
            app:scaleType="fillCenter" />

        <FrameLayout
            android:id="@+id/scanGuide"
            android:layout_width="260dp"
            android:layout_height="110dp"
            android:layout_gravity="center">

            <View
                android:layout_width="34dp"
                android:layout_height="3dp"
                android:layout_gravity="top|start"
                android:background="#E8FFFFFF" />
            <View
                android:layout_width="3dp"
                android:layout_height="34dp"
                android:layout_gravity="top|start"
                android:background="#E8FFFFFF" />

            <View
                android:layout_width="34dp"
                android:layout_height="3dp"
                android:layout_gravity="top|end"
                android:background="#E8FFFFFF" />
            <View
                android:layout_width="3dp"
                android:layout_height="34dp"
                android:layout_gravity="top|end"
                android:background="#E8FFFFFF" />

            <View
                android:layout_width="34dp"
                android:layout_height="3dp"
                android:layout_gravity="bottom|start"
                android:background="#E8FFFFFF" />
            <View
                android:layout_width="3dp"
                android:layout_height="34dp"
                android:layout_gravity="bottom|start"
                android:background="#E8FFFFFF" />

            <View
                android:layout_width="34dp"
                android:layout_height="3dp"
                android:layout_gravity="bottom|end"
                android:background="#E8FFFFFF" />
            <View
                android:layout_width="3dp"
                android:layout_height="34dp"
                android:layout_gravity="bottom|end"
                android:background="#E8FFFFFF" />
        </FrameLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tvQuickScanStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Apunta al codigo dentro del recuadro"
        android:textColor="@color/liquid_popup_body"
        android:textSize="14sp" />
</LinearLayout>

