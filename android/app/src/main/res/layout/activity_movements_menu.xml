<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <LinearLayout
        android:id="@+id/scrollMovements"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/back"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tvMovementsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Movimientos"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <ImageButton
                    android:id="@+id/btnAlertsQuick"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Alertas"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    android:src="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/tvAlertsBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_badge_red"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="0" />
            </FrameLayout>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <FrameLayout
                        android:id="@+id/layoutCreateMovementHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivCreateMovementAdd"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/add" />
                    </FrameLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#33FFFFFF" />

                    <FrameLayout
                        android:id="@+id/layoutSearchMovementHeader"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_toggle_idle"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/ivCreateMovementSearch"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/search" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCreateMovementContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etCreateType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tipo"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etCreateSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fuente"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCreateProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Producto (ID o nombre)"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etCreateQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Cantidad"
                            android:inputType="number"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etCreateLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="UbicaciA³n"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilCreateToLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etCreateToLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="UbicaciA³n destino"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnCreateMovement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_soft_purple"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Crear movimiento"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingVertical="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSearchMovementContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSearchType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etSearchType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tipo"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilSearchSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etSearchSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fuente"
                            android:inputType="none"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSearchProduct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Producto (ID o nombre)"
                            android:inputType="text"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnSearchMovements"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_soft_purple"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:text="Buscar"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingVertical="10dp" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="0dp" />

                        <Button
                            android:id="@+id/btnClearMovements"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_button_soft_purple"
                            android:backgroundTint="@null"
                            app:backgroundTint="@null"
                            android:text="Limpiar"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:paddingVertical="10dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="3dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1A000000"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnRefreshMovements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_soft_purple"
                    android:backgroundTint="@null"
                    app:backgroundTint="@null"
                    android:text="Recargar movimientos"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp">

                    <TextView
                        android:id="@+id/tvMovementsPageInfo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrando 0/0"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="12sp"
                        android:includeFontPadding="false" />

                    <Button
                        android:id="@+id/btnPrevPageMovements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anterior"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />

                    <Button
                        android:id="@+id/btnNextPageMovements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Siguiente"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMovements"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>

