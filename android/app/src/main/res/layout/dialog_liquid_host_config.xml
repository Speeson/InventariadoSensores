<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="16dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <TextView
            android:id="@+id/tvHostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Configurar host"
            android:textColor="@color/liquid_popup_title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnHostClose"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:padding="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_close_red"
            android:tint="@null"
            app:backgroundTint="@null" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvHostBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Solo para debug en este dispositivo."
        android:textColor="@color/liquid_popup_body"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/etHostValue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_liquid_input"
        android:hint="IP del servidor (ej. 192.168.1.50)"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/liquid_popup_text"
        android:textColorHint="@color/liquid_popup_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHostReset"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Limpiar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnHostSave"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Guardar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />
    </LinearLayout>

</LinearLayout>
