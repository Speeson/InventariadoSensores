<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:id="@+id/layoutSystemHeader"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_toggle_idle"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvAlertsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="96dp"
                android:text="Alertas del sistema (0)"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <ImageButton
                    android:id="@+id/btnClearSystem"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Limpiar alertas del sistema"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear" />

                <ImageView
                    android:id="@+id/ivSystemChevron"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/triangle_down_lg" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutSystemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAlertsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Sin alertas del sistema"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSystemAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <FrameLayout
            android:id="@+id/layoutImportantHeader"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_toggle_idle"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvBackendAlertsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="96dp"
                android:text="Alertas importantes (0)"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <ImageButton
                    android:id="@+id/btnClearStock"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Limpiar alertas importantes"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear" />

                <ImageView
                    android:id="@+id/ivImportantChevron"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/triangle_down_lg" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutImportantContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvBackendAlertsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Sin alertas importantes"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlerts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <FrameLayout
            android:id="@+id/layoutFailedHeader"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_toggle_idle"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tvEventsTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingStart="14dp"
                android:paddingEnd="96dp"
                android:text="Eventos fallidos (0)"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end|center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="8dp">

                <ImageButton
                    android:id="@+id/btnClearFailedEvents"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Limpiar eventos fallidos"
                    android:padding="3dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/clear" />

                <ImageView
                    android:id="@+id/ivFailedChevron"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@null"
                    android:src="@drawable/triangle_down_lg" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layoutFailedContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvEventsEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Sin eventos fallidos"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFailedEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
