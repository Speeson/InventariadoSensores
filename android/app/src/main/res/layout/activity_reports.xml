<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <LinearLayout
        android:id="@+id/scrollReports"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="@null"
                android:src="@drawable/back"
                android:padding="6dp" />

            <TextView
                android:id="@+id/tvReportsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reportes"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="?attr/colorOnSurface" />

            <FrameLayout
                android:layout_width="64dp"
                android:layout_height="64dp">

                <ImageButton
                    android:id="@+id/btnAlertsQuick"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Alertas"
                    android:scaleType="centerInside"
                    android:padding="0dp"
                    android:src="@drawable/ic_bell" />

                <TextView
                    android:id="@+id/tvAlertsBadge"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/bg_badge_red"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="0" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="26dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/liquid_popup_divider"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_liquid_popup_card"
                    android:orientation="vertical"
                    android:padding="16dp">

                <FrameLayout
                    android:id="@+id/layoutTopHeader"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_liquid_button"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvTopHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Top consumidos"
                        android:textStyle="bold"
                        android:textColor="@color/liquid_popup_title" />

                    <ImageView
                        android:id="@+id/ivTopChevron"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/triangle_down_lg" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layoutTopContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTopLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Top N"
                            android:inputType="number"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTopDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha desde (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTopDateTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha hasta (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTopLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etTopLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ubicacion (opcional)"
                            android:minHeight="56dp"
                            android:popupBackground="@drawable/bg_liquid_dropdown_popup"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnTopConsumedSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_button_pressable"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Buscar"
                        android:textAllCaps="false"
                        android:textColor="@color/liquid_popup_button_text"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingVertical="12dp"
                        android:drawableStart="@drawable/search"
                        android:drawableTint="@color/liquid_popup_button_text"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <FrameLayout
                    android:id="@+id/layoutTurnHeader"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_liquid_button"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvTurnHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Indice de rotacion"
                        android:textStyle="bold"
                        android:textColor="@color/liquid_popup_title" />

                    <ImageView
                        android:id="@+id/ivTurnChevron"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@null"
                        android:src="@drawable/triangle_down_lg" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layoutTurnContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTurnLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Top N"
                            android:inputType="number"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTurnDateFrom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha desde (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTurnDateTo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Fecha hasta (YYYY-MM-DD)"
                            android:inputType="none"
                            android:focusable="false"
                            android:clickable="true"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilTurnLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="@color/icon_grad_mid2"
                        app:hintTextColor="@color/liquid_popup_hint"
                        app:endIconMode="dropdown_menu"
                        app:endIconDrawable="@drawable/triangle_down_lg"
                        app:endIconTint="@null">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/etTurnLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ubicacion (opcional)"
                            android:minHeight="56dp"
                            android:popupBackground="@drawable/bg_liquid_dropdown_popup"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/liquid_popup_text"
                            android:textColorHint="@color/liquid_popup_hint" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btnTurnoverSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_button_pressable"
                        android:backgroundTint="@null"
                        app:backgroundTint="@null"
                        android:text="Buscar"
                        android:textAllCaps="false"
                        android:textColor="@color/liquid_popup_button_text"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingVertical="12dp"
                        android:drawableStart="@drawable/search"
                        android:drawableTint="@color/liquid_popup_button_text"
                        android:drawablePadding="8dp" />
                </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
