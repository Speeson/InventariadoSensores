<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="18dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieScanCancel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/error" />

    <TextView
        android:id="@+id/tvScanWarnMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Es necesario acceder a la camara para escanear codigos."
        android:textColor="@color/liquid_popup_title"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnScanWarnClose"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_liquid_button"
        android:backgroundTint="@null"
        android:text="Entendido"
        android:textAllCaps="false"
        android:textColor="@color/liquid_popup_button_text"
        app:backgroundTint="@null" />
</LinearLayout>

