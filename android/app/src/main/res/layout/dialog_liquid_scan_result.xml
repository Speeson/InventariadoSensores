<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieScanResult"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/correct_create" />

    <TextView
        android:id="@+id/tvScanResultTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Resultado"
        android:textColor="@color/liquid_popup_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScanResultMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Mensaje"
        android:textColor="@color/liquid_popup_text"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnScanResultConfirm"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_liquid_button_pressable"
        android:backgroundTint="@null"
        android:text="Confirmar"
        android:textAllCaps="false"
        android:textColor="@color/liquid_popup_button_text"
        app:backgroundTint="@null" />

</LinearLayout>
