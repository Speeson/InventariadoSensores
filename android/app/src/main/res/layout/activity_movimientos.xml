<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Cabecera + flecha (al activar setSupportActionBar en la Activity) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Movimientos"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Tipo de movimiento -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMovementType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo (IN / OUT / ADJUST)"
                    android:inputType="text"
                    android:text="IN" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Product ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etProductId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product ID"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cantidad (para IN/OUT) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad (para IN/OUT)"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Delta (para ADJUST) -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDelta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Delta (para ADJUST, puede ser negativo)"
                    android:inputType="numberSigned" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="UbicaciÃ³n"
                    android:inputType="text"
                    android:text="default" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Source -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Source (SCAN / MANUAL)"
                    android:inputType="text"
                    android:text="MANUAL" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnSendMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar movimiento" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="14dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>