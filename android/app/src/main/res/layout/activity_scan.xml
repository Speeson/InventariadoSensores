<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home_gradient">

    <View
        android:id="@+id/viewNetworkBar"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_gravity="top"
        android:background="@color/online_bar" />

    <ScrollView
        android:id="@+id/scanScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/scanContentRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingTop="14dp"
            android:paddingRight="16dp"
            android:paddingBottom="14dp">

            <LinearLayout
                android:id="@+id/scanHeaderContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_liquid_button_pressable"
                    android:contentDescription="@null"
                    android:padding="6dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tvScanTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Escanear"
                    android:textColor="@color/liquid_popup_title"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <ImageButton
                        android:id="@+id/btnAlertsQuick"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="Alertas"
                        android:padding="0dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bell" />

                    <TextView
                        android:id="@+id/tvAlertsBadge"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="end|top"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/bg_badge_red"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <View
                android:id="@+id/viewScanTopSpacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/scanCardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_popup_card"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Escaneo (camara)"
                            android:textColor="@color/liquid_popup_text"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btnActivateScanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:paddingVertical="12dp"
                            android:text="Activar escaner"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnCloseScanner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:paddingVertical="12dp"
                            android:text="Cerrar escaner"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:backgroundTint="@null" />

                        <FrameLayout
                            android:id="@+id/previewFrame"
                            android:layout_width="match_parent"
                            android:layout_height="220dp"
                            android:layout_marginTop="12dp"
                            android:visibility="gone">

                            <androidx.camera.view.PreviewView
                                android:id="@+id/previewView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:implementationMode="compatible"
                                app:scaleType="fillCenter" />

                            <FrameLayout
                                android:layout_width="250dp"
                                android:layout_height="104dp"
                                android:layout_gravity="center">

                                <View
                                    android:layout_width="32dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="top|start"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="top|start"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="32dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="top|end"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="top|end"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="32dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="bottom|start"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="bottom|start"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="32dp"
                                    android:layout_height="3dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="#E8FFFFFF" />

                                <View
                                    android:layout_width="3dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="bottom|end"
                                    android:background="#E8FFFFFF" />
                            </FrameLayout>
                        </FrameLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_liquid_popup_card"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Escaneo manual"
                            android:textColor="@color/liquid_popup_text"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:boxBackgroundMode="none">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etBarcode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_liquid_input"
                                android:hint="Introduce el codigo manual"
                                android:inputType="number"
                                android:maxLength="13"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                android:textColor="@color/liquid_popup_text"
                                android:textColorHint="@color/liquid_popup_hint" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/btnContinue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_liquid_button_pressable"
                            android:backgroundTint="@null"
                            android:paddingVertical="12dp"
                            android:text="Continuar"
                            android:textAllCaps="false"
                            android:textColor="@color/liquid_popup_button_text"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <View
                android:id="@+id/viewScanBottomSpacer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
