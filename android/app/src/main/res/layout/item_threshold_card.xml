<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/liquid_popup_divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_liquid_input"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivThresholdIcon"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:contentDescription="@null"
                android:src="@drawable/threshold" />

            <TextView
                android:id="@+id/tvThresholdIdLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="ID"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/liquid_popup_list_text"
                android:includeFontPadding="false" />

            <TextView
                android:id="@+id/tvThresholdIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/liquid_popup_list_text"
                android:includeFontPadding="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Producto: Nombre"
                    android:textColor="@color/liquid_popup_list_text"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivWarning"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Aviso"
                    android:src="@drawable/sync"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ubicacion: -"
                android:textColor="@color/liquid_popup_list_text" />

            <TextView
                android:id="@+id/tvThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Umbral: 0"
                android:textColor="@color/liquid_popup_list_text" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
