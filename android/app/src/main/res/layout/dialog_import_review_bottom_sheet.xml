<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvReviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvReviewReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Reason"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@android:color/holo_orange_dark" />

    <LinearLayout
        android:id="@+id/layoutFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tvSuggestionsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Sugerencias"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tvSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sin sugerencias"
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface" />

    <Button
        android:id="@+id/btnToggleJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Ver JSON"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tvJson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurface"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_soft_purple"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            android:text="Aprobar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Space
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rechazar"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
