<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liquid_popup_card"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introducir codigo de barras"
        android:textColor="@color/liquid_popup_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etManualBarcode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_liquid_input"
        android:hint="Codigo de barras"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="13"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColor="@color/liquid_popup_title"
        android:textColorHint="@color/liquid_popup_hint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnManualCancel"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnManualAccept"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_liquid_button"
            android:backgroundTint="@null"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:textColor="@color/liquid_popup_button_text"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>

