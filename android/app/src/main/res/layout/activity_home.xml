<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_home_gradient"
        android:clipChildren="false"
        android:clipToPadding="false">

        <View
            android:id="@+id/viewNetworkBar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/online_bar" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:title="">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingLeft="12dp"
                android:paddingTop="0dp"
                android:paddingRight="12dp"
                android:paddingBottom="0dp">

                <TextView
                    android:id="@+id/tvToolbarTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:textSize="1sp" />
            </FrameLayout>
        </androidx.appcompat.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <GridLayout
                    android:id="@+id/gridMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="5"
                    android:useDefaultMargins="true"
                    android:layout_marginTop="0dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnScan"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivScanIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/scaner"
                                android:contentDescription="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Escanear"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnEvents"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivEventsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/events"
                                android:contentDescription="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Eventos"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnProducts"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivProductsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/products"
                                android:contentDescription="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Productos"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnStock"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivStockIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/stock"
                                android:contentDescription="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Stock"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnMovements"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivMovementsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/movements"
                                android:contentDescription="@null" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Movimientos"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnCategories"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivCategoriesIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/category"
                                android:contentDescription="@null" />
                            <TextView
                                android:id="@+id/tvCategoriesLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Categorias"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnRotation"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivRotationIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/rotation"
                                android:contentDescription="@null" />
                            <TextView
                                android:id="@+id/tvRotationLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Traslados"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnReports"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivReportsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/reports"
                                android:contentDescription="@null" />
                            <TextView
                                android:id="@+id/tvReportsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reportes"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnThresholds"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav"
                            android:padding="12dp">
                            <ImageView
                                android:id="@+id/ivThresholdsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/umbral"
                                android:contentDescription="@null" />
                            <TextView
                                android:id="@+id/tvThresholdsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Umbrales"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnImports"
                        android:layout_width="0dp"
                        android:layout_height="112dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        android:background="@drawable/bg_liquid_nav"
                        app:cardBackgroundColor="#00000000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/bg_liquid_nav">
                            <ImageView
                                android:id="@+id/ivImportsIcon"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/addfile"
                                android:contentDescription="@null" />
                            <TextView
                                android:id="@+id/tvImportsLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Importar CSV"
                                android:textStyle="bold"
                                android:textColor="#111111"
                                android:layout_marginTop="8dp" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <View
        android:id="@+id/topCenterDismissOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="false"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/topMenuHost"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="40dp"
        android:translationZ="40dp"
        android:paddingLeft="12dp"
        android:paddingTop="0dp"
        android:paddingRight="12dp"
        android:paddingBottom="0dp">

        <include layout="@layout/nav_liquid_top_bar" />

        <ProgressBar
            android:id="@+id/themeSpinner"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="12dp"
            android:indeterminate="true"
            android:visibility="gone" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/drawerContainer"
        android:layout_width="272dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:elevation="80dp">

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_liquid_nav"
            android:padding="8dp">

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navViewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:itemIconSize="32dp"
                app:itemIconTint="@null"
                app:itemTextColor="@color/liquid_popup_list_text"
                app:menu="@menu/drawer_menu_compact" />
        </LinearLayout>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>












