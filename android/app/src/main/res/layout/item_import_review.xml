<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1A000000"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivReviewBatchIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/addfile"
                android:contentDescription="Review icon" />

            <TextView
                android:id="@+id/tvReviewBatchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Lote ID"
                android:textStyle="bold"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvReviewBatchId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="11sp"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fila 0"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvReviewMeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="SKU - Qty"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvReviewReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reason"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_dark" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
