<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvPendingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendientes"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPendingEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin pendientes"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/tvFailedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fallidos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="18dp" />

        <TextView
            android:id="@+id/tvFailedEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin errores"
            android:visibility="gone"
            android:layout_marginTop="6dp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
