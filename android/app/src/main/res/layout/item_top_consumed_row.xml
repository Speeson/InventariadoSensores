<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/liquid_popup_divider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_liquid_input"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTopProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto: Nombre"
            android:textColor="@color/liquid_popup_list_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sku: XXX"
            android:textColor="@color/liquid_popup_list_text" />

        <TextView
            android:id="@+id/tvTopTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas totales: 0"
            android:textColor="@color/liquid_popup_list_text" />

        <TextView
            android:id="@+id/tvTopLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion: A1"
            android:textColor="@color/liquid_popup_list_text"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
