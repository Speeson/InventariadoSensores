<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1A000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvTopProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto: Nombre"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTopSku"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sku: XXX" />

        <TextView
            android:id="@+id/tvTopTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ventas totales: 0" />

        <TextView
            android:id="@+id/tvTopLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicacion: A1"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
